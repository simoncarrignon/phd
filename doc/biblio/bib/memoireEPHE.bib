	issn = "0022-3077",
	journal = "J Neurophysiol",
	month = nov,
	number = "5",
	pages = "2323–39",
	title = "Spinal cord modular organization and rhythm generation: an NMDA iontophoretic study in the frog.",
	url = "http://www.ncbi.nlm.nih.gov/pubmed/9819246",
	volume = "80",
	year = "1998"
}


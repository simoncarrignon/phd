	author = "S V Adamovich and M F Levin and A G Feldman",
	issn = "0014-4819",
	journal = "Exp Brain Res",
	number = "2",
	pages = "325–37",
	title = "Merging different motor patterns: coordination between rhythmical and discrete single-joint movements.",
	url = "http://www.ncbi.nlm.nih.gov/pubmed/7925813",
	volume = "99",
	year = "1994"
}

